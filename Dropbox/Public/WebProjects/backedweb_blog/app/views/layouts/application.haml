
!!! Strict
%html
  %head
    %title= [@title, "BakedWeb"].compact.join(" | ")
    = stylesheet_link_tag 'reset', 'application'
    = javascript_include_tag 'jquery', 'application'
    = yield_content :include
  %body
    #header
      %h1 BakedWeb
      %ul.menu
        %li= link_to 'Blog', url_for(:posts, :index)
        %li= link_to 'About', url_for(:about)
    #container
      #main= yield
      #sidebar
        - form_tag url_for(:posts, :index), :method => 'get'  do
          Search for:
          = text_field_tag 'query', :value => params[:query]
          = submit_tag 'Search'
        %p Recent Posts
        %ul.bulleted
          %li post1
          %li post2
          %li post3
        %p Categories
        %ul.bulleted
          %li category 1
          %li category 2
          %li category 3
        %p Archives
        %ul.bulleted
          %li ..
          %li ..
          %li ..
#footer
  Copyright (c) 2011 BakedWeb
